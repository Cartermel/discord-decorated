{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2022"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES6",
    "rootDir": "./src",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
